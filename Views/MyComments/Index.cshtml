@model IEnumerable<KaviClientServerProject.Models.Comment>

@{
    Layout = "~/Pages/Shared/_Layout.cshtml"; // Use the shared layout
    //ViewData["Title"] = "My Comments"; // Set the page title
}

<h1 class="my-4">My Comments</h1>

@if (!Model.Any())
{
    <p class="text-muted">You haven't posted any comments yet.</p>
}
else
{
    <div class="list-group">
        @foreach (var comment in Model)
        {
            <div class="list-group-item">
                <h5 class="mb-1">Posted on: @comment.CreatedAt.ToLocalTime().ToString("g")</h5>
                <p class="mb-1">@comment.Content</p>
            </div>
        }
    </div>
}
